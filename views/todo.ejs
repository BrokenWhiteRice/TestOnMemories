    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

    <script>
      $(document).on("click", ".heart-icon", function () {
        $(this).toggleClass("clicked");
        var postId = $(this).data("post-id"); // Get the post ID associated with the clicked heart icon
        localStorage.setItem("heartClicked_" + postId, $(this).hasClass("clicked")); // Use post ID to set item in local storage
      });

      $(document).ready(function () {
        var heartClicked;
        <% todoTasks.forEach(details => { %>
          heartClicked = localStorage.getItem("heartClicked_<%= details._id %>");
          if (heartClicked === "true") {
            $("#<%= details._id %> .heart-icon").addClass("clicked"); // Add class only to the heart icon of the specific post
          }
        <% }) %>
      });

      
      
    </script>
