</div>
      <!-- Pagination -->

      <!-- List of existing posts -->
      <!-- List of existing posts -->
<div class="posts-list">
  <% todoTasks.forEach(details => { %>
    <div class="item-card container" id="<%= details._id %>">
      <div class="item-card-header">
        <img
          class="profile-picture"
          src="<%= avatarUrl %>"
          alt="Profile Picture"
        />
        <div class="user-info">
          <strong><%= details.name %></strong>
          <p><%= details.location %></p>
        </div>
      </div>
      <div class="item-card-body">
        <img src="/uploads/filename %>" alt="Task Image">

        <div class="comments" src=""></div>
        <div class="caption"><%= details.caption %></div>
      </div>
      <div class="item-actions">
        <i
          class="fas fa-heart heart-icon"
          data-post-id="<%= details._id %>"
        ></i>
        <div class="ml-auto">
          <button class="btn btn-primary btn-edit">
            <a style="color: white" href="/edit/<%= details._id %>">Edit</a>
          </button>
          <button class="btn btn-danger btn-delete">
            <a style="color: white" href="/remove/<%= details._id %>">Delete</a>
          </button>
        </div>
      </div>
    </div>
  <% }) %>
